            <fileNamePattern>${UF_SDK_LOG_FOLDER}/traffic/uf-sdk-traffic-failure-%d{yyyy-MM-dd}_%i.log.gz</fileNamePattern>
            <!-- or whenever the file size reaches 50MB -->
